{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build ppgame",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "type": "shell",
            "command": "scons",
            "args": [
                "platform=windows",
                "target=editor",
                "dev_build=yes",
                "bits=64",
                "-j16",
                "custom_modules=${workspaceFolder}/ppgame/src"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}